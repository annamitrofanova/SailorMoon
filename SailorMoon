/*
S = aYb | rDk
S = uDv|pYmDw
Y = xx| Sf
D=Yk|zz
*/

#include <stdio.h>
#include <time.h>
#include <stdlib.h>

const static char * const a =  "Когда Вы говорите, Иван Васильевич, впечатление такое, что Вы бредите." ;
const static char * const b = "А что, вас уже выпустили из сумасшедшего дома?";
const static char * const xx = "А боярыня моя со своим любовником Якиным на Кавказ сегодня убежала.";
const static char * const zz =  "Эх, Марфуша, нам ли быть в печали?" ;

const static char * const m =  "Царь, очень приятно, здравствуйте, царь!" ;
const static char * const w =  "Танцуют все!" ;
const static char * const p =  "Ох, тяжко мне! Молви еще раз, ты не демон?" ;
const static char * const r=  "Лжёшь, собака! Аз есмь царь!" ;
const static char * const k =  "Ты чьих будешь? Чей холоп, спрашиваю?" ;
const static char * const v =  "Оставь меня, старушка, я в печали." ;
const static char * const u =  "Ты пошто боярыню обидел, смерд?!" ;
const static char * const f =  "Сейчас милиция разберется, кто из нас холоп." ;

void S();
void Y();
void D();

void S() {
    switch(rand() % 4) {
        case 0: 
            printf("%s\n", a);
            Y();
	    printf("%s\n", b);
            break;
        case 1:
	    printf("%s\n", r);
            D();
            printf("%s\n", k);
            break;
	case 2:
	    printf("%s\n", u);
	    D();
	    printf("%s\n", v);
	    break;
	case 3:
	    printf("%s\n", p);
	    Y();
	    printf("%s\n", m);
	    D();
	    printf("%s\n", w);
	    break;
    }
}

void Y() {
    switch(rand() % 2) {
        case 0:
            printf("%s\n", xx);
            break;
        case 1:
            S();
            printf("%s\n", f);
            break;
    }   
}

void D() {
    switch(rand() % 2) {
        case 0:
	    Y();
            printf("%s\n", k);
            break;
        case 1:
            printf("%s\n", zz);
            break;
    }   
    
}

int main(int argc, char** argv) {
    srand(time(NULL));
    S();
    return 0;


}
